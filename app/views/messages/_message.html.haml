.main-chat__message--left{data: {message: {id: message.id}}}
  = message.user.name
  .main-chat__message--left--item
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-chat__message--bottom
  - if message.content.present?
    %p.main-chat__message--bottom__content
      = message.content
  = image_tag message.image.url, class: 'main-chat__message--bottom__content__image' if message.image.present?

